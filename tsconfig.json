{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}